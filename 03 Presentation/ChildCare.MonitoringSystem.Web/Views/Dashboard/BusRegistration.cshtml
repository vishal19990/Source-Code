@model StudentDetail;
@{
    ViewData["Title"] = "BusRegistration";
}

@section LeftNavigation{
    <partial name="_AdminLeftNavigation" />
}
<!-- MAIN CONTENT-->
<div class="main-content">
    @*<div class="section__content section__content--p30">*@
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <strong align="center">Student Registration Form</strong>
            </div>
            <div class="card-body card-block">
                @*@foreach (var item in Model.Student)
                    {*@

                <form asp-controller="Dashboard" asp-action="StudentRegistration" id="studentForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="nf-student" class=" form-control-label">Student Name *</label>
                        <input asp-for="StudentName" type="text" placeholder="Enter Student Name" title="Enter Student Name" class="form-control" required>

                    </div>
                    <div class="form-group">
                        <label for="nf-student-img" class=" form-control-label">Student Profile</label>
                        <input asp-for="StudentImg" type="file" class="form-control" title="Choose Student Profile Picture">

                    </div>
                    <div class="form-group">
                        <label for="address" class=" form-control-label">Address *</label>
                        <textarea asp-for="StudentAddress" rows="5" class="form-control" title="Enter Student Address"></textarea>

                    </div>
                    @*<label><input type="radio" name="gender" class="gender" value="0">Male</label>
                        <label><input type="radio" name="gender" class="gender" value="1"> Female</label>*@
                    <div class="form-group">
                        <label>Gender  </label>
                        <br />
                        <input asp-for="StudentGender" type="radio" class="mygender" value="male" />Male&nbsp;
                        <input asp-for="StudentGender" type="radio" class="mygender" value="female" />Female&nbsp;
                        <input asp-for="StudentGender" type="radio" class="mygender" value="others" />Others&nbsp;


                    </div>

                    <div class="form-group">
                        <label for="dob" class=" form-control-label">Date-Of-Birth *</label>
                        <input asp-for="StudentDob" type="date" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label for="fname" class=" form-control-label">Father Name/Guardian Name *</label>
                        <input asp-for="FatherName" type="text" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label for="mname" class=" form-control-label">Mother Name </label>
                        <input asp-for="MotherName" type="text" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label for="mname" class=" form-control-label">User Name *</label>
                        <div class="input-group">
                            @*@Html.TextBoxFor(x => x.UserName)*@
                            <input asp-for="UserName" type="text" placeholder="Username" class="form-control">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nf-email" class=" form-control-label">Email *</label>
                        <div class="input-group">
                            <input asp-for="UserEmail" type="email" placeholder="Enter Email.." class="form-control">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                        </div>


                    </div>
                    <div class="form-group">
                        <label for="nf-password" class=" form-control-label">Password *</label>
                        <div class="input-group">
                            <input asp-for="UserPassword" type="password" placeholder="Enter Password.." class="form-control">
                            <div class="input-group-addon">
                                <i class="fa fa-asterisk"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mobileno" class=" form-control-label">Mobile Number</label>
                        <input asp-for="UserMobileNo" type="tel" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label>Batch</label>
                        @*  <input class="form-control" type="time" name="batch" id="batch" required>*@
                        <select asp-for="Batch" id="sbatch" class="form-control">
                            <option value="B1">B1</option>
                            <option value="B2">B2</option>
                            <option value="B3">B3</option>
                            <option value="B4">B4</option>
                            <option value="B5">B5</option>
                        </select>
                    </div>

                    @*<div class="form-group">
                            <label>Bus</label>
                            <select asp-for="Bus" id="sbus" class="form-control">
                                <option value="Bus 1">Bus 1</option>
                                <option value="Bus 2">Bus 2</option>
                                <option value="Bus 3">Bus 3</option>
                            </select>
                        </div>*@


                    <input type="submit" class="btn btn-primary " />
                    <button type="reset" class="btn btn-success ">
                        Reset
                    </button>
                    <span asp-validation-for="ErrorMessage" class="text-danger"></span>
                </form>

            </div>

        </div>
    </div>
</div>

